<?xml version="1.0" encoding="UTF-8" ?>
<Shell x:Class="NutritionDiary.AppShell"
       xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       xmlns:views="clr-namespace:NutritionDiary.Views"
       Title="NutritionDiary"
       Shell.FlyoutBehavior="Disabled">

    <!-- Основная структура приложения -->
    <TabBar>
        <ShellContent 
            Title="Главная"
            Icon="home.png"
            ContentTemplate="{DataTemplate views:MainPage}"
            Route="MainPage" />
        <ShellContent 
            Title="Рецепты"
            Icon="recipe.png"
            ContentTemplate="{DataTemplate views:RecipesPage}"
            Route="RecipesPage" />
        <ShellContent 
            Title="Статистика"
            Icon="stats.png"
            ContentTemplate="{DataTemplate views:StatisticsPage}"
            Route="StatisticsPage" />
    </TabBar>

</Shell>
